{
    "machine": {
        "host": "$host",
        "username": "$username",
        "password": "$password"
    },
    "commands": [
        "sudo apt-get update",
        "curl -sL https://deb.nodesource.com/setup_7.x | sudo -E bash -",
        "sudo apt-get install -y nodejs",

        "npm install pm2 -g",

        "mkdir /logs",
        "npm --prefix /opt/oauth2-framework install",
        "pm2 stop oauth2-framework",
        "pm2 start /opt/oauth2-framework/src/app.js --name oauth2-framework -- --prod --port 9003"
    ],
    "directories": [
        {
            "source": "$workspace/src",
            "destination": "/opt/oauth2-framework/src"
        },
        {
            "source": "$workspace/apidoc",
            "destination": "/opt/oauth2-framework/apidoc"
        },
        {
            "source": "$workspace/coverage",
            "destination": "/opt/oauth2-framework/coverage"
        }
    ],
    "files": [
        {
            "source": "$workspace/package.json",
            "destination": "/opt/oauth2-framework/package.json"
        }
    ]
}